@using GeoffBurnsTaskList.Models
@model GeoffBurnsTaskList.Models.Commitment

@{
    ViewBag.Title = "Add New Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.date').datepicker({dateFormat: 'dd/mm/yy'});
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
         <fieldset>
            <legend>Details of Task to Add</legend>
           
        <div class="editor-label">
            @Html.LabelFor(model => model.DueDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DueDate)
            @Html.ValidationMessageFor(model => model.DueDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Task)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Task)
            @Html.ValidationMessageFor(model => model.Task)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Priority)
        </div>
        <div class="editor-field">
       
            @Html.EditorFor(model => model.Priority)
            @Html.ValidationMessageFor(model => model.Priority)
        </div>
        <p>
            <input type="submit" value="Add New Task to List" />
        </p>
         </fieldset>
}

<div>
    @Html.ActionLink("Back to TaskList", "Index")
</div>